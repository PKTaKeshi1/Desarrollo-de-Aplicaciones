<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Ámbito de Función</title>
</head>
<body>
  <h1>Scope y try-catch-finally</h1>
  <script>
    const x = "declarada afuera";

    function ejemplo() {
      console.log("Dentro de la función");
      console.log(x);
    }

    ejemplo();
    console.log("Fuera de la función:", x);

    function f() {
      try {
        console.log(0);
        throw 'bogus';
      } catch (e) {
        console.log(1);
        return true;
      } finally {
        console.log(3);
        return false;
      }
    }

    console.log(f());
  </script>
</body>
</html>
