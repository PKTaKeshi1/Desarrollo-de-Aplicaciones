<body>
  <h1>Uso de Variables y Constantes</h1>
  <script>
    {
      let variableBloque = "Variable con let";
      const constanteBloque = "Constante dentro de bloque";

      console.log(variableBloque);
      console.log(constanteBloque);
    }

    try {
      console.log(variableBloque);
    } catch (error) {
      console.log("Error: variableBloque no accesible fuera del bloque.");
    }
  </script>
</body>
