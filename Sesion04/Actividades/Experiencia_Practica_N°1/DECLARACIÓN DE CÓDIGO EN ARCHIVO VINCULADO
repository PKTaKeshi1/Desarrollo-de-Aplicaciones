<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Declaración de Código en Archivo Externo</title>
    <script src="main.js"></script>
</head>
<body>
    <header>
        <h1>Práctica: Código en Archivo Vinculado</h1>
    </header>
    <main>
        <p id="estado">Estado: esperando acción...</p>
        <button onclick="mostrarEstado()">Mostrar Estado</button>
        <br><br>
        <label for="numero">Ingresa un número:</label>
        <input type="text" id="numero">
        <button onclick="validarNumero()">Validar Número</button>

        <p id="resultado"></p>
    </main>
    <footer>
        <p>© 2025 Lenguajes de Programación III</p>
    </footer>
</body>
</html>
// Función que actualiza el estado de la aplicación
function mostrarEstado() {
    document.getElementById("estado").innerHTML = "Estado: funcionalidad activa mediante archivo externo.";
}

// Función que valida si el valor ingresado es un número
function validarNumero() {
    let entrada = document.getElementById("numero").value;
    let resultado = document.getElementById("resultado");

    try {
        if (entrada.trim() === "" || isNaN(entrada)) {
            throw "Error: Debes ingresar un número válido.";
        }
        resultado.innerHTML = "Número ingresado correctamente: " + entrada;
    } catch (error) {
        resultado.innerHTML = error;
    }
}
